            color: #fff;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        /* Header Styles */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #444;
            border-bottom: 1px solid #555;
        }

        .logo {
            width: 40px;
            height: 40px;
            background-image: url('logo.png');
            background-size: cover;
            border-radius: 50%;
            margin-right: 10px;
        }

        .title {
            font-family: 'Playfair Display', serif;
            font-size: 24px;
            font-weight: bold;
            margin: 0;
            text-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
        }

        /* Container Styles */
        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background-color: #333;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        /* Form Styles */
        .form {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            border: 1px solid #555;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }

        .form button {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            font-weight: bold;
            background-color: #555;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            animation: pulse 2s infinite;
        }

        .form button:hover {
            background-color: #666;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        /* Tab Styles */
        .tab {
            display: flex;
            justify-content: space-between;
            align-items: center;
